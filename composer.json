{
    "name": "clarkwinkelmann/flarum-ext-discussion-lists",
    "description": "Create public or private lists of discussions",
    "keywords": [
        "flarum",
        "list",
        "series"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2",
        "flamarkt/backoffice": "^0.1.0",
        "ext-json": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-discussion-lists",
        "forum": "https://discuss.flarum.org/d/31560"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\DiscussionLists\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Discussion Lists",
            "category": "feature",
            "icon": {
                "name": "fas fa-list-ol",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            },
            "optional-dependencies": [
                "v17development/flarum-blog"
            ]
        }
    }
}
